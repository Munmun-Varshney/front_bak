<% layout('/layouts/boilerplate') -%>
<body>
<div class="row">
      <div class="col-8 offset-2 ">
          <h2><%=listingById.title%></h2>
      </div>
      <div class="col-6 offset-2">
          <div class="card listing-card">
              <img src="<%=listingById.image%>" class="card-img-top show-img" alt="listing-image">
              <div class="card-body">
                  <p class="card-text">
                  <%=listingById.description%><br>
                  &#8377;<%=listingById.price.toLocaleString("en-IN")%><br>
                  <%=listingById.location%><br>
                  <%=listingById.country%><br>
                  </p>
               </div>
          </div>
      
      
      </div>
        <div class="btns mb-3">
            <a href="/listing/<%=listingById._id%>/edit" class="btn edit-btn offset-2">Edit </a>
            <form action="/listing/<%=listingById._id%>?_method=DELETE"  method="post">
                 <button class="btn btn-dark offset-3">Delete </button>
            </form> 
        </div>


       <div class="col-8 offset-2 mb-3 ">
                <hr>
                <h4>Leave A Review</h4>
                <form  action="/listing/<%=listingById._id%>/review" method="post" novalidate class="needs-validation">
                    <div class="mb-3">
                          <label class="form-label" for="rating">Rating</label>
                          <input  type="range" class="form-range" min="0" max="5" name="review[rating]" id="rating">
                    </div>
                    <div class="mb-3">
                          <label class="form-label" for="comment">Comment</label>
                          <textarea  class="form-control" name="review[comment]" id="comment" ></textarea>
                          <div class="invalid-feedback">
                               Add comment.
                          </div>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
                <hr>
                   <h4>All Reviews</h4>
                <div class="row">
                   <%for(let review of listingById.reviews){%>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                           <h6 class="card-title">deeksha</h6>
                           <p class="card-text"><%=review.comment%></p>
                            <p class="card-text"><%=review.rating%> stars</p>
                        </div>
                        <form class="mb-3 mt-2" method="post" action="/listing/<%=listingById._id%>/review/<%=review._id%>?_method=DELETE">
                           <button class="btn btn-sm btn-dark ">Delete</button>
                        </form>
                    </div>
                    <%}%>
                 </div>
        </div>
</div>
</body>
